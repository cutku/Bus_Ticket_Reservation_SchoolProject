<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/sign_up_activity_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="74dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_activity_password_text"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_activity_password_text"
        app:layout_constraintStart_toStartOf="@+id/sign_up_activity_password_text"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sign_up_activity_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="193dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sign_up_activity_sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="54dp"
        android:onClick="signIn"
        android:text="Sıgn In"
        app:layout_constraintBaseline_toBaselineOf="@+id/sign_up_activity_sign_up"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_activity_sign_up"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sign_up_activity_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="1dp"
        android:onClick="signUp"
        android:text="Sıgn Up"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_activity_password_text"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_activity_password_text" />
</android.support.constraint.ConstraintLayout>