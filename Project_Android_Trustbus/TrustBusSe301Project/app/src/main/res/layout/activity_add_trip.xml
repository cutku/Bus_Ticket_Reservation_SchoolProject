<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/addTripActivityAddTripButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="16dp"
        android:onClick="addTrip"
        android:text="Add Trip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTripActivityDateButton" />

    <Spinner
        android:id="@+id/addTripActivityFromSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Spinner
        android:id="@+id/addTripActivityWhereSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/addTripActivityTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:text="From"
        app:layout_constraintBottom_toTopOf="@+id/addTripActivityFromSpinner"
        app:layout_constraintStart_toStartOf="@+id/addTripActivityFromSpinner"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Destination"
        app:layout_constraintBottom_toTopOf="@+id/addTripActivityWhereSpinner"
        app:layout_constraintEnd_toStartOf="@+id/addTripActivityTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTripActivityFromSpinner" />

    <Button
        android:id="@+id/addTripActivityDateButton"
        android:layout_width="144dp"
        android:layout_height="0dp"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="72dp"
        android:onClick="goCalender"
        android:text="Select Departure Date"
        app:layout_constraintBottom_toTopOf="@+id/addTripActivityAddTripButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTripActivityTextView" />

    <TextView
        android:id="@+id/addTripActivityTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="43dp"
        android:text="Date Time"
        app:layout_constraintBottom_toTopOf="@+id/addTripActivityDateButton"
        app:layout_constraintEnd_toEndOf="@+id/addTripActivityDateButton"
        app:layout_constraintStart_toStartOf="@+id/addTripActivityDateButton"
        app:layout_constraintTop_toBottomOf="@+id/addTripActivityWhereSpinner" />

</android.support.constraint.ConstraintLayout>